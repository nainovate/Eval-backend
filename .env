# Application Settings
APP_NAME="Claude Evaluation Backend"
APP_VERSION="1.0.0"
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=evaluation_db

# OpenTelemetry Settings
OTEL_SERVICE_NAME=claude-evaluation-service
OTEL_SERVICE_VERSION=1.0.0

# Jaeger Settings
# For local development (Jaeger in Docker)
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# For Docker Compose deployment, use:
# JAEGER_ENDPOINT=http://jaeger:14268/api/traces
# DOCKER_ENV=true

# Prometheus Settings
PROMETHEUS_PORT=8001

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log